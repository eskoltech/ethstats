ADDR := 192.168.0.20:3000
SECRET := 123456789

#   _____                    _
#  |_   _|_ _ _ __ __ _  ___| |_ ___
#    | |/ _` | '__/ _` |/ _ \ __/ __|
#    | | (_| | | | (_| |  __/ |_\__ \
#    |_|\__,_|_|  \__, |\___|\__|___/
#                 |___/

b:
	go build -o ./build/bin/ethstats

start: b
	./build/bin/ethstats --secret ${SECRET} --addr ${ADDR}
